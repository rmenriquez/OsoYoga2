<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    android:minHeight="250dp"
    tools:context="com.osito.osoyoga.ActividadMenu">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="590dp"
        android:gravity="center_horizontal|center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1.44"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/log_oso" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/texto_oso" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="367dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/bResp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botones_esquinas_redondeadas"
                android:fontFamily="casual"
                android:text="@string/respiraciones"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bMud"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botones_esquinas_redondeadas"
                android:fontFamily="casual"
                android:text="@string/mudras"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bPost"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botones_esquinas_redondeadas"
                android:fontFamily="casual"
                android:text="@string/posturas"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bRut"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botones_esquinas_redondeadas"
                android:fontFamily="casual"
                android:text="@string/rutinas"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bSalir"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/botones_esquinas_redondeadas"
                android:fontFamily="casual"
                android:text="@string/salir"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
